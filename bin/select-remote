#!/bin/bash
set -eu -o pipefail

remotes=("$@")

if [[ ${#remotes[@]} -eq 0 ]] || [[ -z ${remotes[0]} ]]; then
	echo 'there are no remotes' >&2
	exit 1
elif [[ ${#remotes[@]} -eq 1 ]]; then
	remote=${remotes[0]}
else
	printf '%s\n' "${remotes[@]}" | nl
	read -p 'select a remote: ' num
	[[ $num -eq $num ]]
	remote=${remotes[$num - 1]}
fi

printf '%s\n' "$remote"
