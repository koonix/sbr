#!/bin/bash
set -eu -o pipefail

container=$1
path=$2
user=${3:-}
password_file=${4:-}

database=${path%%/*}
table=${path#${database}/}

extra_file=''

if [[ -n $password_file ]]; then
	extra_file=$(
		docker exec --interactive "$container" sh -c '
			set -eu
			file=$(mktemp)
			printf "[client]\npassword=" > "$file"
			cat >> "$file"
			echo "$file"
		' < "$password_file"
	)
fi

param_file=$(
	docker exec --interactive "$container" sh -c '
		set -eu
		file=$(mktemp)
		chmod 644 "$file"
		cat > "$file"
		echo "$file"
	' <<< "$table"
)

docker exec --interactive "$container" mariadb \
	${extra_file:+--defaults-extra-file="$extra_file"} \
	${user:+--user="$user"} --database=$database \
<<- EOF
	set @tbl = replace(load_file('$param_file'), '\n', '');
	drop table @tbl cascade;
EOF

docker exec "$container" rm "$param_file"

if [[ -n $extra_file ]]; then
	docker exec "$container" rm "$extra_file"
fi
